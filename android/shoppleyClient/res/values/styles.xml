<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style
		name="CustomTheme"
		parent="@android:style/Theme.NoTitleBar"
	>
		<item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
	</style>
	<style
		name="CustomTabWidget"
		parent="@android:style/Widget.TabWidget"
	>
		<item name="android:textAppearance">@style/CustomTabWidgetText</item>
	</style>
	<style
		name="CustomTabWidgetText"
		parent="@android:style/TextAppearance.Widget.TabWidget"
	>
		<item name="android:textSize">12dip</item>
		<item name="android:textStyle">normal</item>
	</style>
	<style name="SplashScreen">
		<item name="android:padding">0dp</item>
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:windowFrame">@null</item>
	</style>
	<style name="TextHeader1">
		<item name="android:textColor">@android:color/primary_text_dark</item>
		<item name="android:textSize">30px</item>
	</style>
	<style name="TextHeader2">
		<item name="android:textColor">@android:color/secondary_text_dark</item>
		<item name="android:textSize">22px</item>
	</style>
	<style name="TextDesc">
		<item name="android:textColor">@android:color/tertiary_text_dark</item>
		<item name="android:textSize">20px</item>
	</style>
	<style name="TextInfo">
		<item name="android:textColor">@android:color/tertiary_text_dark</item>
		<item name="android:textSize">18px</item>
	</style>
	<style name="TextAlert">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">18px</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="TextListHeader1">
		<item name="android:textColor">@android:color/primary_text_dark</item>
		<item name="android:textSize">20px</item>
	</style>
	<style name="TextListHeader2">
		<item name="android:textColor">@android:color/secondary_text_dark</item>
		<item name="android:textSize">16px</item>
	</style>
	<style name="TextListAlert">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">14px</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>