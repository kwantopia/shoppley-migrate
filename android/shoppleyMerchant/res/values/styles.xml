<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style
		name="CustomTheme"
		parent="@android:style/Theme.NoTitleBar"
	>
		<item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
	</style>
	<style
		name="CustomTabWidget"
		parent="@android:style/Widget.TabWidget"
	>
		<item name="android:textAppearance">@style/CustomTabWidgetText</item>
	</style>
	<style
		name="CustomTabWidgetText"
		parent="@android:style/TextAppearance.Widget.TabWidget"
	>
		<item name="android:textSize">12dip</item>
		<item name="android:textStyle">normal</item>
	</style>
	<style name="SplashScreen">
		<item name="android:padding">0dp</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowFrame">@null</item>
	</style>
	<style name="TextHeader1">
		<item name="android:textColor">@color/orange</item>
		<item name="android:textSize">28dip</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="TextHeader2">
		<item name="android:textColor">@color/green</item>
		<item name="android:textSize">24dip</item>
	</style>
	<style name="TextDesc">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">20dip</item>
	</style>
	<style name="TextDetailInfo">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">18dip</item>
	</style>
	<style name="TextDetailInfoBold">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">18dip</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="TextInfo">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">14dip</item>
	</style>
	<style name="TextInfoBold">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">14dip</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="TextAlert">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">14dip</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="TextListHeader1">
		<item name="android:textColor">@color/orange</item>
		<item name="android:textSize">17dip</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="TextListHeader2">
		<item name="android:textColor">@color/green</item>
		<item name="android:textSize">15dip</item>
	</style>
	<style name="TextListAlert">
		<item name="android:textColor">@color/red</item>
		<item name="android:textSize">11dip</item>
	</style>
	<style name="TextListAlertBold">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">11dip</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="TextCodeBold">
		<item name="android:textColor">@color/orange</item>
		<item name="android:textSize">22dip</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="TextCode">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">20dip</item>
	</style>
</resources>